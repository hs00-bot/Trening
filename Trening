    <script>
        function beregnBMI() {
            const vekt = parseFloat(document.getElementById('vekt').value);
            const h√∏yde = parseFloat(document.getElementById('h√∏yde').value) / 100; // Konverter cm til meter
            const bmi = vekt / (h√∏yde * h√∏yde);
            
            document.getElementById('resultat').innerHTML = 
                `Din BMI: ${bmi.toFixed(1)} - ${bmi < 18.5 ? 'Undervekt' : bmi < 25 ? 'Normalvekt' : 'Overvekt'}`;
        }
